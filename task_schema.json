{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
      "completed": {
        "type": "boolean",
        "description": "Whether the task is completed"
      },
      "created": {
        "type": "string",
        "format": "date-time",
        "description": "The time when the task was created (timestamp)"
      },
      "details": {
        "type": "string",
        "description": "Details of the task"
      },
      "title": {
        "type": "string",
        "description": "The title of the task"
      },
      "user": {
        "type": "string",
        "description": "Reference to the user document, in the format '/users/{uid}'"
      }
    },
    "required": ["completed", "created", "title", "user"]
  }
  